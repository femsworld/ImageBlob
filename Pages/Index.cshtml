@page
@model ImageBlob.Pages.IndexModel
@{
    ViewData["Title"] = "Image Gallery";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>Upload Image</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="image">Choose a File:</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="file" id="image" name="ImageFile" class="form-control-file" accept="image/*" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </div>
    </form>
</div>

@if (Model.BlobItems != null && Model.BlobItems.Count > 0)
{
    <div class="row">
        @foreach (var blobItem in Model.BlobItems)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@Url.Action("GetBlobImage", "Image", new { blobName = blobItem.Name })" alt="Uploaded Image" class="card-img-top" />

                    <div class="card-body">
                        @* <h5 class="card-title">Image Title</h5> *@
                        <h5 class="card-title">@blobItem.Name</h5>
                        <p class="card-text">Some description about the image.</p>
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .card {
        margin-bottom: 20px;
    }

    .card-img-top {
        max-height: 150px;
        object-fit: cover;
    }
</style>
